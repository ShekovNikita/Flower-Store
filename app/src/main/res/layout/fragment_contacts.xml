<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="30dp"
    android:background="#DDD9D6"
    android:paddingHorizontal="40dp"
    tools:context=".fragments.ContactsFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_back"
        android:paddingVertical="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/btn_back"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/logo" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/materialTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/arimo"
            android:text="@string/flowers_gifts"
            android:textColor="@color/color_text_main_fragment"
            android:textSize="16sp"
            app:fontFamily="@font/arimo_bold" />
    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/materialTextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Special offer"
        app:fontFamily="@font/arimo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/btn_catalog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="Catalog"
            app:fontFamily="@font/arimo"
            app:layout_constraintStart_toEndOf="@+id/materialTextView4"
            app:layout_constraintTop_toTopOf="@+id/materialTextView4" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/btn_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="About"
            app:fontFamily="@font/arimo"
            app:layout_constraintStart_toEndOf="@+id/btn_catalog"
            app:layout_constraintTop_toTopOf="@+id/materialTextView4" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="+375 (33) 123-45-67"
            app:fontFamily="@font/arimo_bold"
            app:layout_constraintStart_toStartOf="@+id/materialTextView4"
            app:layout_constraintTop_toBottomOf="@+id/btn_catalog" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView6"
            android:layout_width="25dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/facebook"
            app:layout_constraintStart_toStartOf="@id/number"
            app:layout_constraintTop_toBottomOf="@id/number" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_instagram"
            android:layout_width="25dp"
            android:layout_height="44dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/instagram"
            app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView6"
            app:layout_constraintStart_toEndOf="@+id/appCompatImageView6"
            app:layout_constraintTop_toTopOf="@+id/appCompatImageView6" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView9"
        android:layout_width="25dp"
        android:layout_height="44dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/vk"
        app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView6"
        app:layout_constraintStart_toEndOf="@+id/btn_instagram"
        app:layout_constraintTop_toTopOf="@+id/appCompatImageView6" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView10"
        android:layout_width="25dp"
        android:layout_height="44dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/telegram"
        app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView6"
        app:layout_constraintStart_toEndOf="@+id/appCompatImageView9"
        app:layout_constraintTop_toTopOf="@+id/appCompatImageView6" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/materialTextView6"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:lineHeight="20sp"
        android:text="Minsk, st. Kalvariyskaya, 21–114 Working hours: around the clock 24/7"
        app:fontFamily="@font/roboto"
        app:layout_constraintStart_toStartOf="@+id/appCompatImageView6"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView6" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:fontFamily="@font/roboto_thin"
        android:lineHeight="20sp"
        android:text="@string/about_adress"
        app:layout_constraintTop_toBottomOf="@+id/materialTextView6"
        tools:layout_editor_absoluteX="40dp" />
</androidx.constraintlayout.widget.ConstraintLayout>