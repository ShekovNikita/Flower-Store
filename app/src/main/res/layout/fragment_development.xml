<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#DDD9D6"
    android:paddingHorizontal="40dp"
    tools:context=".fragments.DevelopmentFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:paddingEnd="20dp"
        android:src="@drawable/arrow_back"
        app:layout_constraintBottom_toBottomOf="@+id/contact_us"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/contact_us" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/contact_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arimo_bold"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:text="Contact us"
        android:textColor="@color/color_text_main_fragment"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/info_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arimo"
        android:gravity="center_horizontal"
        android:lineHeight="20dp"
        android:layout_marginTop="20dp"
        android:text="Design, layout and development of applications individually for your \nbusiness"
        android:textColor="@color/color_text_main_fragment"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_us" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/app_developer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arimo_bold"
        android:gravity="center"
        android:lineHeight="20dp"
        android:text="App developer"
        android:textColor="@color/color_text_main_fragment"
        android:textSize="16sp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@+id/info_about"
        app:layout_constraintTop_toBottomOf="@+id/info_about" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/develop_email"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/email"
        android:layout_marginStart="63dp"
        app:layout_constraintBottom_toBottomOf="@+id/app_developer"
        app:layout_constraintStart_toEndOf="@+id/app_developer"
        app:layout_constraintTop_toTopOf="@+id/app_developer" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/develop_insta"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/instagram"
        app:layout_constraintBottom_toBottomOf="@+id/app_developer"
        app:layout_constraintEnd_toStartOf="@+id/develop_telega"
        app:layout_constraintStart_toEndOf="@+id/develop_email"
        app:layout_constraintTop_toTopOf="@+id/app_developer" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/develop_telega"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/telegram"
        app:layout_constraintBottom_toBottomOf="@+id/app_developer"
        app:layout_constraintEnd_toEndOf="@+id/info_about"
        app:layout_constraintTop_toTopOf="@+id/app_developer" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/designer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arimo_bold"
        android:gravity="center"
        android:lineHeight="20dp"
        android:text="Designer UI/UX"
        android:textColor="@color/color_text_main_fragment"
        android:textSize="16sp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="@+id/info_about"
        app:layout_constraintTop_toBottomOf="@+id/app_developer" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/design_email"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/email"
        app:layout_constraintBottom_toBottomOf="@+id/designer"
        app:layout_constraintEnd_toEndOf="@+id/develop_email"
        app:layout_constraintStart_toStartOf="@+id/develop_email"
        app:layout_constraintTop_toTopOf="@+id/designer" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/design_insta"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/instagram"
        app:layout_constraintBottom_toBottomOf="@+id/design_email"
        app:layout_constraintEnd_toEndOf="@+id/develop_insta"
        app:layout_constraintStart_toStartOf="@+id/develop_insta"
        app:layout_constraintTop_toTopOf="@+id/design_email" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/design_telega"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/telegram"
        app:layout_constraintBottom_toBottomOf="@+id/design_email"
        app:layout_constraintEnd_toEndOf="@+id/info_about"
        app:layout_constraintTop_toTopOf="@+id/design_email" />

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EN/RU"
        app:layout_constraintEnd_toEndOf="@+id/info_about"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_order_app"
        style="@style/green_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_buy"
        android:text="Order an App"
        android:layout_marginTop="60dp"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/designer" />
</androidx.constraintlayout.widget.ConstraintLayout>